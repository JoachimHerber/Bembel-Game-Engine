<Scene>
	<Assets>
		<Texture name="earth"   file="textures/earth.png"/>
		<Texture name="sun"     file="textures/sun.png"/>
		
		<Material 
			name                          = "earth"
			albedo_texture                = "earth"
			normal_map_contains_roughness = "true"
			reflectivity                  = "0.1, 0.1, 0.1"
			roughness                     = "0.9"
		/>
		<Material 
			name                          = "sun"
			emission_texture              = "sun"
			albedo_texture                = "sun"
			reflectivity                  = "0.1, 0.1, 0.1"
			roughness                     = "0.9"
		/>
	</Assets>
	<Entities>
			
		<Entity>
			<Position x="0.0" y="0.0" z="-10.0"/>
			<PointLight color="1.0 0.9 0.8" bulbRadius="3.0" cutoffRadius="100.0" intensity="100"/>
			<SimpleGeometry shape="SPHERE" size="3 3 3" material="sun" />
		</Entity>
		
		<Entity>
			<Position x="0.0" y="0.0" z="0.0"/>
			<SimpleGeometry shape="SPHERE" size="1 1 1" material="earth" />
		</Entity>
	</Entities>
</Scene>