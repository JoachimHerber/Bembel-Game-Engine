    <ChildShape position="0.0 1.40 0.0"             type="cylinder" radius="0.20" height="1.6"/>
    <ChildShape position="0.0 2.10 0.0" pitch="180" type="cone"     radius="0.50" height="0.7"/>
    <ChildShape position="0.0 2.80 0.0"             type="cylinder" radius="0.63" height="0.8"/>
    <ChildShape position="0.0 3.05 0.0"             type="sphere"   radius="0.35"/>
