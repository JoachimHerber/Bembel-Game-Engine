	<CollisionShape name="tile" type="compound">
		<ChildShape position="0.0 -0.05 0.0" type="box"      size="2.0 0.1 2.0"/>
	</CollisionShape>
	
	<GeometryModel name="white.tile" mesh="chess.mesh.xml" >
